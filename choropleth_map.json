{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Poverty Rate (>$2.15 per day)",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
           "data" : {
               "url": "ne_10m_ocean.json",
               "format": {
                   "type": "topojson"
                   "feature": "ne_10m_ocean"
               }
           },
            "mark": {
                "type": "geoshape",
                "fill": "skyblue"
            }
        },
        {
            "data": {
                "url": "ne_110m_graticules_30.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "clip": true,
                "fill": null,
                "stroke": "lightgrey"
            }
        },

        {
            "data": {
                "url": "ne_110m_admin_0_countries.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "share-of-population-in-extreme-poverty.csv"
                        },
                        "key": "Entity",
                        "fields": [
                            "Share of population in poverty"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "black",
                "strokeWidth": 0.5
            },
            "encoding": {
                "color": {
                    "field": "Share of population in poverty",
                    "type": "quantitative",
                    "title": "Proportion in extreme poverty",
                    "scale": {
                        "type": "threshold",
                        "scheme": "greens",
                        "domain": [10, 20, 30, 40, 50]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Share of population in poverty",
                        "type": "quantitative",
                        "title": "Population proportion in extreme poverty"
                    }
                ]
            }
        }

    ]
}
